@model IEnumerable<CrudClienteCidadeEstado.Models.Estado>

@{
    ViewData["Title"] = "Estados";
}

<style>
    body {
        font-family: Arial, sans-serif;
        margin: 20px;
        color: #333;
    }

    h1 {
        color: #2c3e50;
        margin-bottom: 20px;
    }

    a {
        text-decoration: none;
    }

    .btn {
        display: inline-block;
        padding: 6px 12px;
        border-radius: 4px;
        font-size: 14px;
        margin-right: 5px;
    }

    .btn-sm {
        padding: 4px 8px;
        font-size: 13px;
    }

    .btn-warning {
        background-color: #ffc107;
        color: #212529;
        border: none;
    }

        .btn-warning:hover {
            background-color: #e0a800;
        }

    .btn-info {
        background-color: #17a2b8;
        color: white;
        border: none;
    }

        .btn-info:hover {
            background-color: #138496;
        }

    .btn-danger {
        background-color: #dc3545;
        color: white;
        border: none;
    }

        .btn-danger:hover {
            background-color: #c82333;
        }

    .btn-create {
        background-color: #28a745;
        color: white;
        padding: 8px 14px;
        border-radius: 4px;
        font-size: 14px;
    }

        .btn-create:hover {
            background-color: #218838;
        }

    table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
    }

    th, td {
        padding: 10px;
        border-bottom: 1px solid #ccc;
    }

    th {
        text-align: left;
        background-color: #f8f9fa;
    }

    tr:hover {
        background-color: #f1f1f1;
    }
</style>

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="Create" class="btn-create">Adicionar Novo Estado</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Sigla)</th>
            <th>@Html.DisplayNameFor(model => model.Nome)</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Sigla)</td>
                <td>@Html.DisplayFor(modelItem => item.Nome)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.EstadoId" class="btn btn-sm btn-warning">Editar</a>
                    <a asp-action="Details" asp-route-id="@item.EstadoId" class="btn btn-sm btn-info">Detalhes</a>
                    <a asp-action="Delete" asp-route-id="@item.EstadoId" class="btn btn-sm btn-danger">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>
