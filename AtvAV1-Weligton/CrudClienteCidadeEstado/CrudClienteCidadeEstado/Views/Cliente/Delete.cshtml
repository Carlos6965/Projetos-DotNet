@model CrudClienteCidadeEstado.Models.Cliente

@{
    ViewData["Title"] = "Excluir Cliente";
}

<style>
    body {
        font-family: Arial, sans-serif;
        margin: 20px;
        color: #333;
    }

    h1 {
        color: #c0392b;
        margin-bottom: 20px;
    }

    h4 {
        margin-top: 20px;
        color: #444;
    }

    dt {
        font-weight: bold;
    }

    dd {
        margin-bottom: 15px;
    }

    .action-links {
        margin-top: 20px;
    }

    .delete-btn {
        background-color: #dc3545;
        color: white;
        padding: 8px 12px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }

        .delete-btn:hover {
            background-color: #c82333;
        }

    .back-btn {
        background-color: gray;
        color: white;
        padding: 8px 12px;
        text-decoration: none;
        border-radius: 4px;
        margin-left: 10px;
    }

        .back-btn:hover {
            background-color: darkgray;
        }
</style>

<h1>@ViewData["Title"]</h1>

<h3>Tem certeza de que deseja excluir este cliente?</h3>

<div>
    <h4>Cliente</h4>
    <hr />
    <dl>
        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Nome)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Nome)</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.DataNasc)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.DataNasc)</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Idade)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Idade)</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Sexo)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Sexo)</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Cidade)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Cidade.CidadeId)</dd>
    </dl>

    <form asp-action="Delete" class="action-links">
        <input type="hidden" asp-for="ClienteId" />
        <input type="submit" value="Excluir" class="delete-btn" />
        <a asp-action="Index" class="back-btn">Cancelar</a>
    </form>
</div>
