@model CrudClienteCidadeEstado.Models.Cliente

@{
    ViewData["Title"] = "Detalhes do Cliente";
}

<style>
    body {
        font-family: Arial, sans-serif;
        margin: 20px;
        color: #333;
    }

    h1 {
        color: #2c3e50;
        margin-bottom: 20px;
    }

    h4 {
        margin-top: 20px;
        color: #444;
    }

    dt {
        font-weight: bold;
    }

    dd {
        margin-bottom: 15px;
    }

    .action-links a {
        display: inline-block;
        padding: 8px 12px;
        margin-right: 10px;
        border-radius: 4px;
        text-decoration: none;
        font-size: 14px;
    }

    .edit-btn {
        background-color: blue;
        color: white;
    }

        .edit-btn:hover {
            background-color: darkblue;
        }

    .back-btn {
        background-color: green;
        color: white;
    }

        .back-btn:hover {
            background-color: darkgreen;
        }
</style>

<h1>@ViewData["Title"]</h1>

<div>
    <h4>Cliente</h4>
    <hr />
    <dl>
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Nome)
        </dd>

        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.DataNasc)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.DataNasc)
        </dd>

        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Idade)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Idade)
        </dd>

        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Sexo)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Sexo)
        </dd>

        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.Cidade)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.Cidade.CidadeId)
        </dd>
    </dl>
</div>

<div class="action-links">
    <a asp-action="Edit" asp-route-id="@Model?.ClienteId" class="edit-btn">Editar</a>
    <a asp-action="Index" class="back-btn">Voltar para a Lista</a>
</div>
