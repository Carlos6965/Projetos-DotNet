@model CrudClienteCidadeEstado.Models.Cidade

@{
    ViewData["Title"] = "Editar Cidade";
}

<style>
    body {
        font-family: Arial, sans-serif;
        margin: 20px;
        color: #333;
    }

    h1 {
        color: #2c3e50;
        margin-bottom: 20px;
    }

    h4 {
        margin-top: 20px;
        color: #444;
    }


    .form-group {
        margin-bottom: 15px;
    }

    label {
        font-weight: bold;
    }

    .form-control {
        width: 100%;
        padding: 8px;
        border-radius: 4px;
        border: 1px solid #ccc;
        margin-top: 5px;
    }

    .btn-save {
        background-color: blue;
        color: white;
        padding: 8px 12px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }

        .btn-save:hover {
            background-color: darkblue;
        }

    .text-danger {
        color: #dc3545;
        font-size: 0.9em;
    }

    .back-link {
        display: inline-block;
        margin-top: 20px;
        padding: 8px 12px;
        background-color: green;
        color: white;
        text-decoration: none;
        border-radius: 4px;
    }

        .back-link:hover {
            background-color: green;
        }
</style>

<h1>@ViewData["Title"]</h1>

<h4>Cidade</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <div>
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="CidadeId" />

                <div class="form-group">
                    <label asp-for="Nome"></label>
                    <input asp-for="Nome" class="form-control" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="EstadoId"></label>
                    <select asp-for="EstadoId" class="form-control" asp-items="ViewBag.EstadoId"></select>
                    <span asp-validation-for="EstadoId" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <input type="submit" value="Salvar" class="btn-save" />
                    <a asp-action="Index" class="back-link">Voltar para a Lista</a>
                </div>

                <div>
                    
                </div>
            </form>
        </div>
    </div>
</div>



@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
